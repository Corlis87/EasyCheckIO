<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TiaFrameworkUI.View.f_SelectFileMenu"
             xmlns:rs="clr-namespace:TiaFrameworkUI.Resources"
             x:Name="this"
             >
    <Grid>
        <Grid RowDefinitions="auto,auto,auto,auto" RowSpacing="5">
            <Button WidthRequest="35" HeightRequest="35" Padding="0"
                    Command="{Binding LoadFile,Source={x:Reference this}}"
                    Text="{x:Static rs:FASolidIcons.Play}"  FontFamily="FASolid"/>
            <Button Grid.Row="1"  WidthRequest="35" HeightRequest="35" Padding="0"
                    Command="{Binding ExportFile,Source={x:Reference this}}"
                    Text="{x:Static rs:FASolidIcons.FileExcel}"  FontFamily="FASolid" />
            <Button Grid.Row="2"  WidthRequest="35" HeightRequest="35" Padding="0"
                    Command="{Binding RemoveFile,Source={x:Reference this}}"
                    Text="{x:Static rs:FASolidIcons.Trash}"  FontFamily="FASolid"   />
            <Button Grid.Row="3" WidthRequest="50" HeightRequest="50" Padding="0"
                    Command="{Binding CloseMenu,Source={x:Reference this}}"
                    Text="{x:Static rs:FASolidIcons.Xmark}"  FontFamily="FASolid" FontSize="35" />
        </Grid>

    </Grid>
</ContentView>
